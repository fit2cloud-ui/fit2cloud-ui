{
  "name": "fit2cloud-ui",
  "version": "1.5.0-beta.0",
  "main": "lib/fit2cloud-ui.common.js",
  "style": "lib/fit2cloud-ui.css",
  "private": false,
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "serve-examples": "vue-cli-service serve --mode examples",
    "build-examples": "vue-cli-service build --mode examples --dest docs",
    "build": "npm run build-lib && npm run build-components",
    "build-lib": "vue-cli-service build --target lib --name fit2cloud-ui --dest lib ./src/index.js --formats commonjs",
    "build-components": "npx webpack --config ./build/webpack.component.js",
    "lint": "vue-cli-service lint"
  },
  "author": "fit2cloud",
  "license": "GPL-2.0 License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fit2cloud-ui/fit2cloud-ui.git"
  },
  "dependencies": {
    "clipboard": "^2.0.6",
    "core-js": "^3.6.5",
    "element-ui": "^2.14.1",
    "vue": "^2.6.11",
    "vue-router": "^3.5.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "highlight.js": "^9.18.5",
    "loader-utils": "^2.0.0",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "vue-template-compiler": "^2.6.11",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/no-unused-components": "off",
      "no-case-declarations": "off",
      "no-console": "off",
      "no-unused-vars": "off",
      "no-unused-expressions": "off",
      "no-unused-labels": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
